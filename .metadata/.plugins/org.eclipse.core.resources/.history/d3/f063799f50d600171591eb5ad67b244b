package Helper;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Set;
public class PlayGround {
	public static void main(String args[])
	{
		
		  
		String query="Select * from employee where employeeName=?;";
		try {
			Class.forName("com.mysql.jdbc.Driver");  
			Connection conn=DriverManager.getConnection("jdbc:mysql://127.0.0.1:3306/employeedetails","root","pass00");
			ResultSet rs;
			PreparedStatement ps= conn.prepareStatement(query);
			ps.setString(1, "Naveen");
			rs=ps.executeQuery();
			HashMap<String,String> empInfo= new HashMap<String,String>();
			while (rs.next()) {
				empInfo.put(rs.getString(1),rs.getString(2));
		      
		        Set<Map.Entry<String,String>> set = empInfo.entrySet();
		        Iterator iterator = set.iterator();
		        while (iterator.hasNext()) {		    			
		    			// Get Key
		    		String keyValue = (String) mapEntry.getKey();
		    			
		    		//Get Value
		    		String value = (String) mapEntry.getValue();

		    		System.out.println("Key : " + keyValue + "= Value : " + value);
		    		}
		    }
			conn.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}
